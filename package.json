{
  "version": "8.0.1",
  "name": "@simonkberg/eslint-config",
  "description": "A shareable eslint config for my JavaScript projects",
  "main": "index.js",
  "scripts": {
    "test": "yarn prettier:check && eslint . && jest",
    "prettier:check": "prettier --list-different '**/*.js'",
    "prettier:format": "prettier --write '**/*.js'",
    "precommit": "lint-staged",
    "prerelease": "yarn test",
    "release": "standard-version -s"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/simonkberg/eslint-config.git"
  },
  "author": "Simon Kjellberg <simon.kjellberg@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simonkberg/eslint-config/issues"
  },
  "homepage": "https://github.com/simonkberg/eslint-config#readme",
  "engines": {
    "node": ">= 6"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "jest --findRelatedTests",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": "./index.js"
  },
  "eslintIgnore": [
    "__fixtures__"
  ],
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "babel-eslint": "^8.2.1",
    "eslint-config-prettier": "^2.3.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.2.1",
    "eslint-plugin-standard": "^3.0.1"
  },
  "peerDependencies": {
    "eslint": ">=3.19.0"
  },
  "devDependencies": {
    "eslint": "^4.5.0",
    "husky": "^0.14.3",
    "jest": "^22.1.3",
    "lint-staged": "^6.0.0",
    "prettier": "^1.5.3",
    "standard-version": "^4.2.0"
  },
  "files": [
    "index.js",
    "react.js"
  ]
}
