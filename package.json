{
  "version": "10.0.0",
  "name": "@simonkberg/eslint-config",
  "description": "A shareable eslint config for my JavaScript projects",
  "main": "index.js",
  "scripts": {
    "test": "yarn prettier:check && eslint . && jest",
    "prettier:check": "prettier --list-different '**/*.js'",
    "prettier:format": "prettier --write '**/*.js'",
    "precommit": "lint-staged",
    "prerelease": "yarn test",
    "release": "standard-version -s"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/simonkberg/eslint-config.git"
  },
  "author": "Simon Kjellberg <simon.kjellberg@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simonkberg/eslint-config/issues"
  },
  "homepage": "https://github.com/simonkberg/eslint-config#readme",
  "engines": {
    "node": ">= 6"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "jest --findRelatedTests",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": "./index.js"
  },
  "eslintIgnore": [
    "__fixtures__"
  ],
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "babel-eslint": "^9.0.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.0",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0"
  },
  "peerDependencies": {
    "eslint": ">=5"
  },
  "devDependencies": {
    "eslint": "5.5.0",
    "husky": "0.14.3",
    "jest": "23.5.0",
    "lint-staged": "7.2.2",
    "prettier": "1.14.2",
    "standard-version": "4.4.0"
  },
  "files": [
    "index.js",
    "flowtype.js",
    "react.js"
  ]
}
